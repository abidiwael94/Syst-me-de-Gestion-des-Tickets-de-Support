<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head> 
<body>
  <header>
    <h1>Admin Dashboard</h1>
  </header>

  <section class="overview">
    <div class="card">
      <h2>Total Users</h2>
      <p><%= counts.totalUsers %></p>
    </div>
    <div class="card">
      <h2>Total Tickets</h2>
      <p><%= counts.totalTickets %></p>
    </div>
    <div class="card">
      <h2>Open Tickets</h2>
      <p><%= counts.status.open %></p>
    </div>
    <div class="card">
      <h2>In Progress</h2>
      <p><%= counts.status.in_progress %></p>
    </div>
    <div class="card">
      <h2>Closed Tickets</h2>
      <p><%= counts.status.closed %></p>
    </div>
  </section>

  <section class="tables">
    <h2>All Tickets</h2>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Status</th>
          <th>Created By</th>
          <th>Assigned To</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.title %></td>
            <td><%= ticket.status %></td>
            <td>
              <%= ticket.createdBy
                    ? ticket.createdBy.name
                    : 'Unknown' %>
            </td>
            <td>
              <%= ticket.assignedTo
                    ? ticket.assignedTo.name
                    : 'Unassigned' %>
            </td>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td>
             <!-- Dashboard Edit Link (passes fromDashboard=true) -->
              <a href="/tickets/edit/<%= ticket._id %>?fromDashboard=true" title="Edit Ticket">
                <button><i class="fas fa-edit"></i></button>
              </a>
                <button onclick="confirmDelete('/tickets/<%= ticket._id %>')">
                    <i class="fas fa-trash"></i>
                </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <section class="tables">
    <h2>All Users</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Role</th>
          <th>Joined At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.password.length > 30 ? user.password.slice(0, 10) + "..." : user.password %></td>
            <td><%= user.role %></td>
            <td><%= user.createdAt
                         ? user.createdAt.toLocaleDateString()
                         : '–' %></td>
            <td>              
               <button><i class="fas fa-edit"></i></button> 
               <button onclick="confirmDelete('/api/users/<%= user._id %>')"><i class="fas fa-trash"></i></button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </section>

  <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999;">
    <div id="emailToast" class="toast align-items-center text-bg-success border-0" role="alert">
      <div class="d-flex">
        <div class="toast-body">
          ✉️ Un e-mail a été envoyé à l'utilisateur assigné.
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
      const params = new URLSearchParams(window.location.search);
      if (params.get('emailSent') === 'true') {
        if (typeof bootstrap === 'undefined') {
          console.error('Bootstrap not loaded!');
          return;
        }
        
        const toastEl = document.getElementById('emailToast');
        if (toastEl) {
          const toast = new bootstrap.Toast(toastEl, {
            autohide: true,
            delay: 5000
          });
          toast.show();
          
          history.replaceState(null, '', window.location.pathname);
        }
      }
    });

    function confirmDelete(url) { 
        const confirmAction = confirm("Are you sure you want to delete this item?");
        if (confirmAction) {
            fetch(url, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            },
            })
            .then(response => {
            if (response.ok) {
                alert("Item deleted successfully!");
                location.reload();
            } else {
                alert("Error deleting item.");
            }
            })
            .catch(error => {
            console.error("Error:", error);
            alert("Error deleting item.");
            });
        }
    }  
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
